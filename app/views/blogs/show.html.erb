<h1><%= @blog.title %></h1>
<p><%= @blog.body %></p>

<h2>Comments</h2>
<% @blog.comments.each do |comment| %>
  <p><%= comment.content %></p>
<% end %>

<%= form_with(model: [@blog, @comment], url: blog_comments_path(@blog)) do |form| %>
  <%= form.text_area :content %>
  <%= form.submit 'Add Comment' %>
<% end %>