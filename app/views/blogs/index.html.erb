<h1>All Blogs</h1>

<% @blogs.each do |blog| %>
  <h2><%= blog.title %></h2>
  <p><%= blog.body %></p>
  <%= link_to 'Read more', blog_path(blog) %>
  <% if current_user && current_user == blog.user_id%>
    <%= link_to 'Edit', edit_blog_path %>
    <%= link_to 'Delete', destroy_blog_path, data: { confirm: 'Do you want to delete this blog?' } %>
    
  <% end %>
  <hr>
<% end %>

